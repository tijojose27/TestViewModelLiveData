<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="15dp"
    android:translationZ="10dp"
    android:background="@drawable/customborder"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parcel_detail_top_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.75"
                android:baselineAligned="false">

                <TextView
                    android:id="@+id/detail_list_recipient_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:background="@android:color/darker_gray"
                    tools:text="The Coorporate offices of the woodlands of waste connections \n 1001 Waterway Place Dr near the mall \nThe woodlands, Texas - 77003"
                    android:orientation="vertical">

                </TextView>

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@mipmap/map">

                </ImageView>

                <TextView
                    android:id="@+id/account_info_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textSize="25sp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    tools:text="ACCOUNT NUMBER 4014-13474-003121\n\nACCOUT TYPE : RESIDENTIAL\n\n STATUS : ACTIVE"
                    android:background="@android:color/holo_green_light">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/account_notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="28sp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:text="@string/ipsum_50words"
                android:background="@color/colorPrimaryDark">

            </TextView>

            <TextView
                android:id="@+id/misc_notes"
                android:text="@string/ipsum_50words"
                android:maxLines="1"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:background="@color/colorAccent">
            </TextView>

            <LinearLayout
                android:id="@+id/parcel_detail_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:baselineAligned="false">

                <TextView
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:id="@+id/detail_list_route_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:overScrollMode="always"
                    tools:text="NUM : \nF-01\nFREQ : \n"
                    android:background="@android:color/holo_blue_bright"
                    android:scrollbars="vertical">

                </TextView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@android:color/holo_red_dark">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                </ScrollView>


                <LinearLayout
                    android:id="@+id/six_button_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>